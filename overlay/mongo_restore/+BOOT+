#!/bin/bash
# +BOOT+ ‚Äî Unified system launcher for ATI Oracle Engine

LOG="$HOME/Soap/logs/boot.log"
TRIGGER="$HOME/Soap/.trigger.rebuild"
TIMESTAMP=$(date '+%Y-%m-%d %H:%M:%S')

echo "[$TIMESTAMP] üöÄ BOOTING Oracle Engine..." | tee -a "$LOG"

# Step 1: Create rebuild trigger
echo "REBUILD=1" > "$TRIGGER"
echo "[$TIMESTAMP] üß† Trigger file created." | tee -a "$LOG"

# Step 2: Run ATTENTION (wake system)
if [ -f "$HOME/Soap/attention.py" ]; then
  echo "[$TIMESTAMP] ‚ö° Running attention.py" | tee -a "$LOG"
  python3 "$HOME/Soap/attention.py"
else
  echo "[$TIMESTAMP] ‚ö†Ô∏è attention.py not found." | tee -a "$LOG"
fi

# Step 3: Run CODE-RED scan/offload
echo "[$TIMESTAMP] üî• Launching code_red.py..." | tee -a "$LOG"
python3 "$HOME/Soap/code_red.py"

# Step 4: Run SPIN-UP to activate all rotors
echo "[$TIMESTAMP] üåÄ Activating spin_up.py..." | tee -a "$LOG"
python3 "$HOME/Soap/spin_up.py"

# Step 5: Optional restore
if [ -f "$HOME/Soap/fusion_restore_v2.py" ]; then
  echo "[$TIMESTAMP] ‚ôªÔ∏è Running fusion_restore_v2.py..." | tee -a "$LOG"
  python3 "$HOME/Soap/fusion_restore_v2.py"
fi

echo "[$TIMESTAMP] ‚úÖ +BOOT+ Complete." | tee -a "$LOG"
